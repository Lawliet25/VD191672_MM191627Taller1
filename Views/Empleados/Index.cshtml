@model IEnumerable<VD191672_MM191627Taller1.Models.Empleado>

@{
    ViewBag.Title = "Index";
}

<h2>Inicio</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
    @using (Html.BeginForm("Index", "Empleados", FormMethod.Get))
    {
<p>
    Cargo: @Html.DropDownList("cargo", "Todos")
    Código: @Html.TextBox("BuscarString") <br />
    <input type="submit" value="Filter" />
</p>
    }
</p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SueldoBase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AñosLaborales)
            </th>
            <th>
                Bono
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaNacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cargo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SueldoBase)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AñosLaborales)
                </td>
                <td>
                    @if (item.AñosLaborales < 1)
                    {
                        double sueldoBaseComoDouble = (double)item.SueldoBase;
                        double resultado = sueldoBaseComoDouble * 0;
                        @Html.DisplayFor(modelItem => resultado)
                    }
                    @if (item.AñosLaborales >= 1 && item.AñosLaborales <= 3)
                    {
                        double sueldoBaseComoDouble = (double)item.SueldoBase;
                        double resultado = sueldoBaseComoDouble * 0.02;
                        @Html.DisplayFor(modelItem => resultado)
                    }
                    @if (item.AñosLaborales > 3 && item.AñosLaborales < 5)
                    {
                        double sueldoBaseComoDouble = (double)item.SueldoBase;
                        double resultado = sueldoBaseComoDouble * 0.035;
                        @Html.DisplayFor(modelItem => resultado)
                    }
                    @if (item.AñosLaborales >= 5)
                    {
                        double sueldoBaseComoDouble = (double)item.SueldoBase;
                        double resultado = sueldoBaseComoDouble * 0.05;
                        @Html.DisplayFor(modelItem => resultado)
                    }
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
